---
import Background from "./background.astro";

interface Props {
  title: string;
  section?: string;
  description?: string;
  inverted?: boolean;
}

const { section, title, description, inverted = false} = Astro.props;
---

<Background />
<div class="mx-auto max-w-7xl px-2 lg:px-5">
  <div class="mx-auto max-w-2xl lg:max-w-none">
    <div
      style="opacity: 1; transform: none;"
      class=`mt-16 flex flex-col ${inverted ? 'items-end' : 'items-stretch'}`>
      {
        section && (
          <span class="block font-display font-bold text-neutral-950 text-5xl sm:text-6xl">
            <h1>{section}</h1>
          </span>
        )
      }
      <!-- @TODO: AquÃ­ en la pantalla principal en el briefseoinfo el title se queda en medio de la nada. -->
      <div
        class="mt-6 block max-w-5xl font-display text-3xl font-medium tracking-tight text-neutral-950 [text-wrap:balance] sm:text-4xl">
        <h2>{title}</h2>
      </div>
      <div class='mt-6 max-w-3xl text-xl text-neutral-600' class={inverted ? 'text-right' : 'text-left'}>
        <p set:html={description} />
        <slot />
      </div>
    </div>
  </div>
</div>
