---
import Link from "./ui/link.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import officeImage from "@assets/office2.webp";
import { getRelativeLocaleUrl } from "astro:i18n";
import { Image } from "astro:assets";
import Sectionhead from "./sectionhead.astro";
import Container from "./ui/container.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Sectionhead title={t("briefAboutUs.title")} />

<Container>
  <div
    class="flex flex-col lg:flex-row justify-between mx-auto max-w-2xl lg:max-w-none gap-12 mt-8">
    <div class="max-w-2xl">
      <div class="mt-6 text-xl text-neutral-600">
        <!-- <p>
          We believe technology is the answer to the world’s greatest
          challenges. It’s also the cause, so we find ourselves in bit of a
          catch 22 situation.
        </p> -->
        <div class="flex flex-col gap-3.5">
          <span set:html={t("briefAboutUs.firstP")} />
          <span set:html={t("briefAboutUs.secondP")} />
        </div>

        <div class="flex mt-10">
          <Link href={getRelativeLocaleUrl(lang, "/contacto")}>
            {t("briefAboutUs.cta")}
          </Link>
        </div>
      </div>
    </div>
    <Image
      alt="Imagen en oficina"
      width={400}
      height={300}
      class="rounded-xl"
      src={officeImage}
    />
  </div>
</Container>
