---
import { social } from "../data";
import Logo from "./logo.astro";

import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const items = {
  work: [
    { name: "SalonChick", path: getRelativeLocaleUrl(lang, "work/salonchick") },
    {
      name: "Neoaesthetic",
      path: getRelativeLocaleUrl(lang, "work/neoaesthetic"),
    },
  ],
  company: [
    {
      name: t("footer.company.about"),
      path: getRelativeLocaleUrl(lang, "sobre-nosotros"),
    },
    {
      name: t("footer.company.services"),
      path: getRelativeLocaleUrl(lang, "servicios"),
    },
    {
      name: t("footer.company.blog"),
      path: getRelativeLocaleUrl(lang, "blog"),
    },
    {
      name: t("footer.company.contact"),
      path: getRelativeLocaleUrl(lang, "contacto"),
    },
  ],
  connect: [
    { name: "Facebook", url: social.facebook },
    { name: "Instagram", url: social.instagram },
    { name: "Twitter", url: social.twitter },
    { name: "GitHub", url: social.github },
  ],
};
---

<footer class="mx-auto max-w-7xl px-6 lg:px-8 mt-24 w-full sm:mt-32 lg:mt-40">
  <div class="mx-auto max-w-2xl lg:max-w-none">
    <div style="opacity: 1; transform: none;">
      <div class="grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-2">
        <nav>
          <ul role="list" class="grid grid-cols-2 gap-8 sm:grid-cols-3">
            <li>
              <div
                class="font-display text-sm font-semibold tracking-wider text-neutral-950">
                {t("footer.work.title")}
              </div>
              <ul role="list" class="mt-4 text-sm text-neutral-700">
                {
                  items.work.map((item) => (
                    <li class="mt-4">
                      <a
                        class="transition hover:text-neutral-950"
                        href={item.path}>
                        {item.name}
                      </a>
                    </li>
                  ))
                }
                <li class="mt-4">
                  <a
                    class="transition hover:text-neutral-950"
                    href={getRelativeLocaleUrl(lang, "nuestro-trabajo")}>
                    {t("footer.seeAll")}
                    <span aria-hidden="true">→</span>
                  </a>
                </li>
              </ul>
            </li>
            <li>
              <div
                class="font-display text-sm font-semibold tracking-wider text-neutral-950">
                {t("footer.company.title")}
              </div>
              <ul role="list" class="mt-4 text-sm text-neutral-700">
                {
                  items.company.map((item) => (
                    <li class="mt-4">
                      <a
                        class="transition hover:text-neutral-950"
                        href={item.path}>
                        {item.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </li><li>
              <div
                class="font-display text-sm font-semibold tracking-wider text-neutral-950">
                {t("footer.connect.title")}
              </div><ul role="list" class="mt-4 text-sm text-neutral-700">
                {
                  items.connect.map((item) => (
                    <li class="mt-4">
                      <a
                        class="transition hover:text-neutral-950"
                        href={item.url}>
                        {item.name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </li>
          </ul>
        </nav>
        <div class="flex lg:justify-end">
          <form class="max-w-sm">
            <h2
              class="font-display text-sm font-semibold tracking-wider text-neutral-950">
              {t("footer.newsletter.primary")}
            </h2>
            <p class="mt-4 text-sm text-neutral-700">
              {t("footer.newsletter.secondary")}
            </p>
