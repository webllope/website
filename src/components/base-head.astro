---
import { SEO } from "astro-seo";
import SocialMediaSharedImage from "@assets/SocialMediaSharedImage.webp";

import "@styles/fonts.css";

// let canonicalURL;

// if (Astro.site) {
//   canonicalURL = new URL(Astro.site);
//   canonicalURL.pathname = "/";
// } else {
//   canonicalURL = new URL(Astro.url.pathname, Astro.site);
// }
const canonicalURLString = new URL(Astro.url.pathname, Astro.site).toString();

// const canonicalURLString = canonicalURL.toString();

const { title } = Astro.props;

const makeTitle = title ? title : "Webllope";
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<!-- <link rel="icon" type="image/svg+xml" href="/favicon.ico" /> -->
<link rel="alternate" href="https://webllope.es/en" hreflang="en" />
<link rel="manifest" href="/site.webmanifest" />

<link
  rel="preload"
  href="/fonts/Mona-Sans.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>

<SEO
  title={makeTitle}
  description="Diseño web en Murcia | Posicionamiento web en Murcia | Creamos tu página web y te hacemos visible en internet."
  canonical={canonicalURLString}
  twitter={{
    creator: "@webllope",
    site: "@webllope",
    card: "summary_large_image",
  }}
  openGraph={{
    basic: {
      url: canonicalURLString,
      type: "website",
      title: makeTitle,
      image: SocialMediaSharedImage.src,
    },
    image: {
      alt: "Webllope core",
    },
  }}
/>
