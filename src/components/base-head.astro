---
import { SEO } from "astro-seo";
import SocialMediaSharedImage from "@assets/SocialMediaSharedImage.webp";

import "@styles/fonts.css";

// We were using Astro.site before but it would not add the www and some seo checkers warn about it some others dont.
const canonicalURLString = new URL(Astro.url.pathname, `https://www.webllope.es/`).toString();

const { title, description } = Astro.props;

const makeTitle = title ? title : "Webllope";
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<!-- <link rel="icon" type="image/svg+xml" href="/favicon.ico" /> -->
<link rel="alternate" href="https://www.webllope.es/en" hreflang="en" />
<link rel="alternate" href="https://www.webllope.es/es" hreflang="es" />
<link rel="manifest" href="/site.webmanifest" />

<link
  rel="preload"
  href="/fonts/Mona-Sans.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>

<SEO
  title={makeTitle}
  description={description}
  canonical={canonicalURLString}
  twitter={{
    creator: "@webllope",
    site: "@webllope",
    description: "Subimos nuestros pensamientos y Ã©xitos a twitter para compartirlos con vosotros.",
    card: "summary",
    title: "Webllope's Twitter account",
    image: "/src/assets/logos/webllopeLogo250.webp"
  }}
  openGraph={{
    basic: {
      url: canonicalURLString,
      type: "website",
      title: makeTitle,
      image: SocialMediaSharedImage.src,
    },
    image: {
      alt: "Webllope core",
    },
  }}
/>
