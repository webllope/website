---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import Reviews from "@components/reviews.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="mt-32 rounded-4xl bg-neutral-950 py-20 mb-32">
    <div class="mx-auto max-w-7xl md:max-w-[100rem] px-6 lg:px-8 overflow-hidden">
      <div class="mx-auto px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:max-w-none">
          <div
            class="flex items-center gap-x-8"
            style="opacity: 1; transform: none;">
            <h3
              class="text-center font-display text-sm font-semibold tracking-wider text-white sm:text-left">
              {t('reviews.title')}
            </h3><div class="h-px flex-auto bg-neutral-800"></div>
          </div>
          <div class="w-full">
            <Reviews />
          </div>
        </div>
      </div>
    </div>
  </div>