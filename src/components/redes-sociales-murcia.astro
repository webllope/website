---
import Hero from "@components/hero.astro";
import Logos from "@components/logos.astro";
import Layout from "@layouts/layout.astro";
import Background from "@components/background.astro";
import TextLeftSection from "@components/text-left-section.astro";
import TextRightSection from "@components/text-right-section.astro";
import TextOnlySection from "@components/text-only-section.astro";
import Clients from "@components/clients.astro";
import ContactForm from "@components/contact-form";
import GoogleMap from "./google-map.astro";

import { getLangFromUrl, useTranslations } from "@i18n/utils";

import Schema from "@components/schemas/redes-sociales-murcia-schema.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("seo.redesSocialesMurcia.title")} description={t("seo.redesSocialesMurcia.description")}>
  <Schema slot="schema" />
  <Background />
  <Hero
    primaryText={t("redesSocialesMurcia.hero.primary")}
    secondaryText={t("redesSocialesMurcia.hero.secondary")}
    tertiaryText={t("redesSocialesMurcia.hero.tertiary")}
    quaternaryText={t("redesSocialesMurcia.hero.quaternary")}
    slotClasses="lg:w-4/12">
    <ContactForm client:load url={Astro.url} />
  </Hero>
  <TextLeftSection
    title={t("redesSocialesMurcia.textLeft.title")}
    firstP={t("redesSocialesMurcia.textLeft.primary")}
    secondP={t("redesSocialesMurcia.textLeft.secondary")}
    cta={{
      text: t("redesSocialesMurcia.textLeft.cta"),
      link: "/contacto",
    }}>
    <video controls width="315" height="560">
      <source src="/src/assets/videos/redes-sociales-murcia.mp4" type="video/mp4" />
    </video>
  </TextLeftSection>
  <Clients />
  <TextRightSection
    title={t("redesSocialesMurcia.textRight.title")}
    firstP={t("redesSocialesMurcia.textRight.primary")}
    secondP={t("redesSocialesMurcia.textRight.secondary")}
    cta={{
      text: t("redesSocialesMurcia.textRight.cta"),
      link: "/contacto",
    }}>
    <video controls width="315" height="560">
      <source src="/src/assets/videos/redes-sociales-en-murcia.mp4" type="video/mp4" />
    </video>
  </TextRightSection>
  <Logos />
  <TextOnlySection
    title={t("redesSocialesMurcia.textOnly.title")}
    firstP={t("redesSocialesMurcia.textOnly.primary")}
    secondP={t("redesSocialesMurcia.textOnly.secondary")}
  />
  <GoogleMap />
  <TextOnlySection
    title={t("redesSocialesMurcia.textOnly2.title")}
    firstP={t("redesSocialesMurcia.textOnly2.primary")}
    secondP={t("redesSocialesMurcia.textOnly2.secondary")}
    cta={{
      text: t("redesSocialesMurcia.textOnly2.cta"),
      link: "/contacto",
    }}
  />
</Layout>
