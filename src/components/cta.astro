---
import Link from "./ui/link.astro";

import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-6xl rounded-4xl flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">
    {t("cta.primary")}
  </h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl">
    {t("cta.secondary")}
  </p>
  <div class="flex mt-10">
    <Link href={getRelativeLocaleUrl(lang, '/services')} style="inverted">{t("cta.button")}</Link>
  </div>
</div>
