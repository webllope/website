---
import Layout from "@layouts/layout.astro";
import SectionHead from "@components/sectionhead.astro";
import officeImage from "@assets/office1.webp";
import seoImage from "@assets/seoImage.webp";
import tiendaOnlineImage from "@assets/tiendaOnline.webp";

import { getLangFromUrl, useTranslations } from "@i18n/utils";
import ServiceSection from "./service-section.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// TODO: check images 'alt' attribute, they are just in Spanish
---

<Layout title={t("services.pageTitle")}>
  <SectionHead
    section={t("services.sectionHead.title")}
    title={t("services.sectionHead.subtitle")}
    description={t("services.sectionHead.description")}
  />

  <ServiceSection
    image={{
      alt: "DiseÃ±o Web Imagen",
      src: officeImage,
    }}
    services={t("services.webServices")}
  />

  <SectionHead
    title={t("services.sectionHead2.subtitle")}
    description={t("services.sectionHead2.description")}
    inverted={true}
  />

  <ServiceSection
    reversed
    image={{
      alt: "Posicionamiento SEO Imagen",
      src: seoImage,
    }}
    services={t("services.seoServices")}
  />

  <SectionHead
    title={t("services.sectionHead3.subtitle")}
    description={t("services.sectionHead3.description")}
  />

  <ServiceSection
    image={{
      alt: "Tienda Online Imagen",
      src: tiendaOnlineImage,
    }}
    services={t("services.shopServices")}
  />
</Layout>
