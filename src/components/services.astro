---
import Layout from "@layouts/layout.astro";
import SectionHead from "@components/sectionhead.astro";
import officeImage from "@assets/office1.webp";
import seoImage from "@assets/agencia-seo-murcia.webp";
import tiendaOnlineImage from "@assets/tiendaOnline.webp";

import { getLangFromUrl, useTranslations } from "@i18n/utils";
import ServiceSection from "./service-section.astro";

import Schema from "@components/schemas/services-schema.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// TODO: check images 'alt' attribute, they are just in Spanish
---

<Layout title={t("seo.services.title")} description={t("seo.services.description")}>
  <Schema slot="schema" />
  <SectionHead
    section={t("services.sectionHead.title")}
    title={t("services.sectionHead.subtitle")}
    description={t("services.sectionHead.description")}
  />

  <ServiceSection
    image={{
      alt: "Diseño Web Murcia",
      src: officeImage,
      loading: "eager",
    }}
    services={t("services.webServices")}
  />

  <SectionHead
    title={t("services.sectionHead2.subtitle")}
    description={t("services.sectionHead2.description")}
    inverted={true}
  />

  <ServiceSection
    reversed
    image={{
      alt: "Posicionamiento SEO Murcia",
      src: seoImage,
      loading: "lazy",
    }}
    services={t("services.seoServices")}
  />

  <SectionHead title={t("services.sectionHead3.subtitle")} description={t("services.sectionHead3.description")} />

  <ServiceSection
    image={{
      alt: "Diseño Tienda Online Murcia",
      src: tiendaOnlineImage,
      loading: "lazy",
    }}
    services={t("services.shopServices")}
  />
</Layout>
