---
import Container from "@components/ui/container.astro";
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown as DropdownContainer,
  DropdownItems,
} from "astro-navbar";
import Logo from "@components/logo.astro";
import NavMenuItem from "@components/nav-menu-item.astro";

import { getLangFromUrl, useTranslations } from "@i18n/utils";
import LanguagePicker from "@components/language-picker.astro";
import { getRelativeLocaleUrl } from "astro:i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const menuitems: Array<{
  title: string;
  path: string;
  subItems?: Array<{ title: string; path: string }>;
  badge?: boolean;
}> = [
  {
    title: t("nav.services"),
    path: "/servicios",
    subItems: [
      {
        title: t("nav.disenoweb"),
        path: getRelativeLocaleUrl(lang, "/diseno-web-murcia"),
      },
    ],
  },
  {
    title: t("nav.work"),
    path: "/trabajo",
  },
  {
    title: t("nav.blog"),
    path: "/blog",
  },
  {
    title: t("nav.aboutUs"),
    path: "/sobre-nosotros",
  },
  {
    title: t("nav.contact"),
    path: "/contacto",
  },
];

---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <Logo parent="Header" />
        <div class="flex flex-row gap-6 items-center lg:hidden">
          <LanguagePicker variant="small" />
          <MenuIcon class="w-4 h-4 text-gray-800" xmlns="a" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <NavMenuItem
                item={item}
                hrefUrl={getRelativeLocaleUrl(lang, item.path)}
              />
            ))
          }
        </ul>
      </MenuItems>
      <div class="hidden lg:block">
        <LanguagePicker />
      </div>
    </Astronav>
  </header>
</Container>
