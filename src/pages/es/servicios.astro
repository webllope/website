---
import Layout from "@layouts/layout.astro";
import SectionHead from "@components/sectionhead.astro";
import officeImage from "@assets/office1.webp";
import seoImage from "@assets/seoImage.webp";
import tiendaOnlineImage from "@assets/tiendaOnline.webp";

import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// @TODO: Tenemos ya una const declarada en content y aquí tenemos que declarar otra const llamando a cada campo del json, esto no está bien optimizado no?
const webServices = [
  {
    title: t("webServices.first.title"),
    description: t("webServices.first.description"),
  },
  {
    title: t("webServices.second.title"),
    description: t("webServices.second.description"),
  },
  {
    title: t("webServices.third.title"),
    description: t("webServices.third.description"),
  },
  {
    title: t("webServices.fourth.title"),
    description: t("webServices.fourth.description"),
  },
];

const seoServices = [
  {
    title: t("seoServices.first.title"),
    description: t("seoServices.first.description"),
  },
  {
    title: t("seoServices.second.title"),
    description: t("seoServices.second.description"),
  },
  {
    title: t("seoServices.third.title"),
    description: t("seoServices.third.description"),
  },
  {
    title: t("seoServices.fourth.title"),
    description: t("seoServices.fourth.description"),
  },
];

const shopServices = [
  {
    title: t("shopServices.first.title"),
    description: t("shopServices.first.description"),
  },
  {
    title: t("shopServices.second.title"),
    description: t("shopServices.second.description"),
  },
  {
    title: t("shopServices.third.title"),
    description: t("shopServices.third.description"),
